{
  "name": "@olad/lint-cli",
  "version": "0.0.1",
  "description": "CLI 命令行工具",
  "author": "Zhaoxm <zhaoxm469@163.com> (https://github.com/zhaoxm469/)",
  "main": "./build",
  "scripts": {
    "dev": "tsc --watch",
    "scan-eslint-type": "node ./scripts/scan-eslint-type.js",
    "scan-deps": "node ./scripts/scan-deps.js",
    "build": "npm install && rimraf ./build && npm run scan-eslint-type && npm run scan-deps && tsc --build ./tsconfig.json"
  },
  "bin": {
    "o-lint": "./bin/olad-lint.js"
  },
  "files": [
    "dist",
    "templates",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "olad-lint",
    "o-lint"
  ],
  "dependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@olad/eslint-config": "workspace:*",
    "@types/node": "^17.0.31",
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "compressing": "^1.5.1",
    "core@": "link:babel/core@",
    "core@7.0.0": "link:babel/core@7.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.4",
    "handlebars": "^4.7.7",
    "inquirer": "^8.1.5",
    "lodash": "^4.17.21",
    "minimatch": "^3.0.4",
    "ora": "^5.4.1",
    "pacote": "^12.0.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
