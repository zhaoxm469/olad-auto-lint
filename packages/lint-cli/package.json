{
  "name": "olad-lint-cli",
  "version": "0.0.12",
  "description": "olad-lint cli工具",
  "main": "./build",
  "scripts": {
    "dev": "tsc --watch",
    "scan-eslint-type": "node ./scripts/scan-eslint-type.js",
    "scan-deps": "node ./scripts/scan-deps.js",
    "build": "npm install && rimraf ./build && npm run scan-eslint-type && npm run scan-deps && tsc --build ./tsconfig.json"
  },
  "bin": {
    "olad-lint": "./bin/olad-lint.js"
  },
  "files": [
    "dist",
    "templates",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "olad-lint",
    "olading"
  ],
  "author": "zhaoxm",
  "license": "ISC",
  "dependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "compressing": "^1.5.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.4",
    "handlebars": "^4.7.7",
    "inquirer": "^8.1.5",
    "minimatch": "^3.0.4",
    "ora": "^5.4.1",
    "pacote": "^12.0.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "eslint-config-selling": "^0.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsxs}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx,json,ts,tsx,vue}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.less": [
      "stylelint --config  ./.stylelintrc --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "http://npm.nucarf.cn/"
  }
}
