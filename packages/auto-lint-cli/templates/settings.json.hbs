{
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "eslint.run": "onSave",
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.validate": [
        "css",
        "scss",
        "less",
        "vue",
    ]
}