{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmitHelpers": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "importHelpers": false,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
    "compileOnSave": true,
    "esModuleInterop": true,
}