{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "module": "ESNext",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "noEmit": false,
        "allowSyntheticDefaultImports":true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "removeComments":true
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts",
        "temp",
        "./src/__tests__"
    ],
    "compileOnSave": true,
    "esModuleInterop": true,
}